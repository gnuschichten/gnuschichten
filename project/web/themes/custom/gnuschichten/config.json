{
  "name": "pwwnrw theme",
  "css": {
    "src": [
      "./src/styles/**/*.scss"
    ],
    "dest": "./dist/styles"
  },
  "scss": {
    "src": [
      "./src/styles/**/*.scss"
    ],
    "dest": "./styles/scss"
  },
  "js": {
    "src": [
      "./src/scripts/**/*.js"
    ],
    "vendor": [
      "./node_modules/bootstrap/dist/js/bootstrap.bundle.js",
      "./node_modules/@highlightjs/cdn-assets/highlight.js",
      "./node_modules/clipboard/dist/clipboard.js"
    ],
    "dest": "./dist/scripts"
  },
  "fonts": {
    "src": [
      "./src/fonts/**/*.woff*"
    ],
    "dest": "./dist/fonts"
  },
  "img": {
    "src": [
      "./src/img/**/*"
    ],
    "dest": "./dist/img"
  }
}
